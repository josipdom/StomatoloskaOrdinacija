@model StomatoloskaOrdinacija.Domain.DTOs.CijenaZahvataDTO

@{
    ViewBag.Title = "Izbriši cijenu zahvata";
}

<h2>@ViewBag.Title</h2>

<h3>Jeste li sigurni da želite izbrisati stavku?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cijena)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-danger" /> |
            @Html.ActionLink("Povratak na listu", "Popis", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
