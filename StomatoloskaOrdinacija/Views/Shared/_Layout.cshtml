<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/ej/web/flat-lime/ej.web.all.min.css")
    @Styles.Render("~/Content/ej/web/responsive-css/ejgrid.responsive.css")
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/Scripts/jsrender.min.js")
    @Scripts.Render("~/bundles/ej")


</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Stomatološka ordinacija", "Kalendar", "Naslovnica", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Pacijenti", "Index", "Pacijenti")</li>
                        <li>@Html.ActionLink("Zahvati", "Index", "Zahvati")</li>
                        <li>@Html.ActionLink("Narudžbe", "Index", "Narudzba")</li>
                        <li>@Html.ActionLink("Radno vrijeme", "Edit", "RadnoVrijeme")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    }
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
        @Html.EJ().ScriptManager()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/ej/i18n/ej.culture.hr-HR.min.js")
        @Scripts.Render("~/Scripts/ej/l10n/ej.localetexts.hr-HR.js")

        @RenderSection("scripts", required: false)
    </body>
</html>
