@using StomatoloskaOrdinacija.Domain.DTOs
@model NarudzbaDTO

@{
    <!-- Datasource for Appointments -->
    List<NarudzbaDTO> Narudzba = new List<NarudzbaDTO>();
    Narudzba.Add(new NarudzbaDTO { ID = 1, Opis = "Opis", Vrijeme = new DateTime(2019, 04, 25, 10, 00, 00), Datum = new DateTime(2019, 04, 25, 11, 00, 00) });
}
@{ List<string> view = new List<string>() { "Day", "WorkWeek" }; }
<h2>Kalendar narudžbi</h2>
<hr />
@(Html.EJ().Schedule("Schedule1")
                .Width("100%")
                .Height("525px")
                .CurrentDate(DateTime.Now)
                .TimeZone("UTC +01:00")
                .StartHour(8)
                .EndHour(16)
                .Locale("hr-HR")
                .Views(view)
                .ShowQuickWindow(false)
                .ReadOnly(true)
                .ShowAppointmentNavigator(true)
                .ShowAllDayRow(false)
                .EnableAppointmentResize(false)
                .AllowDragAndDrop(false)
                .TimeMode(TimeMode.Hour24)
                .DateFormat("dd.MM.yyyy")
                .AppointmentSettings(fields => fields.Datasource(Narudzba)
                    .Id("ID")
                    .Subject("Opis")
                    .StartTime("Vrijeme")
                    .EndTime("Datum")
                    )
                .ScheduleClientSideEvents(evt => evt.AppointmentWindowOpen("onAppointmentWindowOpen"))
)
<script>
    function onAppointmentWindowOpen(args) {
        args.cancel = true;
    }
</script>